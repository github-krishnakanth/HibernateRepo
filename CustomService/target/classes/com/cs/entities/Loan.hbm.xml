<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    <hibernate-mapping package="com.cs.entities">
    	<class name="Loan" table="loan">
    		<id name="loanNo" column="loan_no"/>
    		<property name="loanType" type="string">
    			<column name="loan_type" sql-type="string"/>
    		</property>
    		<property name="principle" type="float">
    			<column name="principle" sql-type="float"/>
    		</property>
    		<property name="tenure" type="int">
    			<column name="tenure" sql-type="int"/>
    		</property>
    		<property name="interestRate" type="float">
    			<column name="interest_rate" sql-type="float"/>
    		</property>
    	</class>
    </hibernate-mapping>